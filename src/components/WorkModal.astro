---
import SectionTitle from "./SectionTitle.astro";
import Divider from "./Divider.astro";
import { getWorks } from "../library/microcms";
const response = await getWorks({
  fields: [
    "id",
    "title",
    "overview",
    "period",
    "scope",
    "techStack",
    "contents",
  ],
});
---

{
  response.contents.map((content: any, i) => (
    <div
      class="portfolio-modal modal fade"
      id={`workModal${i + 1}`}
      tabindex="-1"
      aria-labelledby={`workModal${i + 1}`}
      aria-hidden="true"
    >
      <div class="modal-dialog modal-xl">
        <div class="modal-content">
          <div class="modal-header border-0">
            <button
              class="btn-close"
              type="button"
              data-bs-dismiss="modal"
              aria-label="Close"
            />
          </div>
          <div class="modal-body text-center pb-5">
            <div class="container">
              <div class="row justify-content-center">
                <div class="col-lg-8">
                  <SectionTitle class="text-secondary mb-0">
                    {content.title}
                  </SectionTitle>
                  <Divider class="mt-1 mb-5" />

                  <dl>
                    <dt class="portfolio-modal-item-title text-start border-bottom border-3 mb-4 pb-2 ps-2">
                      概要
                    </dt>
                    <dd class="portfolio-modal-item-text mb-5 text-start">
                      {content.overview}
                    </dd>

                    <dt class="portfolio-modal-item-title text-start border-bottom border-3 mb-4 pb-2">
                      制作期間
                    </dt>
                    <dd class="portfolio-modal-item-text mb-5 text-start">
                      {content.period}
                    </dd>

                    <dt class="portfolio-modal-item-title text-start border-bottom border-3 mb-4 pb-2">
                      担当範囲
                    </dt>
                    <dd class="portfolio-modal-item-text mb-5 text-start">
                      {content.scope}
                    </dd>

                    <dt class="portfolio-modal-item-title text-start border-bottom border-3 mb-4 pb-2">
                      使用技術
                    </dt>
                    <dd class="portfolio-modal-item-text mb-5 text-start">
                      {content.techStack}
                    </dd>

                    <dt class="portfolio-modal-item-title text-start border-bottom border-3 mb-4 pb-2">
                      内容
                    </dt>
                    <dd class="portfolio-modal-item-text mb-5 text-start">
                      {content.contents}
                    </dd>
                  </dl>
                  <button class="btn btn-primary my-5" data-bs-dismiss="modal">
                    <i class="fas fa-xmark fa-fw" />
                    close
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  ))
}
