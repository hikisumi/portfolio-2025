---
import SectionTitle from "./SectionTitle.astro";
import Divider from "./Divider.astro";
import { getSkills } from "../library/microcms";
const response = await getSkills({ fields: ["id", "title", "contents"] });
---

{
  response.contents.map((content: any, i) => (
    <div
      class="portfolio-modal modal fade"
      id={`skillModal${i + 1}`}
      tabindex="-1"
      aria-labelledby={`skillModal${i + 1}`}
      aria-hidden="true"
    >
      <div class="modal-dialog modal-xl">
        <div class="modal-content">
          <div class="modal-header border-0">
            <button
              class="btn-close"
              type="button"
              data-bs-dismiss="modal"
              aria-label="Close"
            />
          </div>
          <div class="modal-body text-center pb-5">
            <div class="container">
              <div class="row justify-content-center">
                <div class="col-lg-8">
                  <SectionTitle class="text-secondary mb-0">
                    {content.title}
                  </SectionTitle>
                  <Divider class="mt-1 mb-5" />

                  <p class="portfolio-modal-item-text mb-4 text-start">
                    {content.contents}
                  </p>
                  <button class="btn btn-primary my-5" data-bs-dismiss="modal">
                    <i class="fas fa-xmark fa-fw" />
                    Close
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  ))
}
